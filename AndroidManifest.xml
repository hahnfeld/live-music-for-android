<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.everysoft.livemusicforandroid"
      android:versionCode="2"
      android:versionName="1.0 BETA 2">
    <application android:icon="@drawable/icon" android:label="@string/app_name">
        <activity android:name=".BandActivity"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ConcertActivity"
                  android:label="@string/app_name">
        </activity>
        <activity android:name=".ConcertSearchActivity"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
            <meta-data android:name="android.app.searchable" android:resource="@xml/searchable"/>
        </activity>
        <activity android:name=".PlayerActivity"
                  android:label="@string/app_name"
                  android:configChanges="orientation|keyboardHidden">
        </activity>
        <meta-data android:name="android.app.default_searchable" android:value=".ConcertSearchActivity" />
    </application>
    <uses-sdk android:minSdkVersion="5" />
	<uses-permission android:name="android.permission.INTERNET" />
</manifest>